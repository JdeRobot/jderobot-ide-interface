{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "./svg.d.ts"
    ],
    "paths": {
      "Assets": [ "src/assets"],
      "Components": [ "src/components"],
      "Utils": [ "src/utils"],
      "Types": [ "src/types"],
    },
    "jsx": "react-jsx",
    "module": "esnext",
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": "./",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "emitDeclarationOnly": false
  },
  "include": [
    "src",
    "svg.d.ts"
  ]
}

